{
    "extends": "rallycoding",
    "plugins": ["react-native"],
    "parserOptions": {
        "no-loop-func": [1]
    },
    "settings": {
        "import/resolver": "reactnative"
    },
    "rules": {
        "semi": ["error", "never"],
        "max-len": "off",
        "no-throw-literal": "off"
    }
}
